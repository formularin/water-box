# Makefile for XTC analysis
#
# possible DEFINES are: -DDEBUG (for extra checks and extra output)
#                       -DXTC   (if xdrf/xtc routines are available)
#                       -DNOT32 (if OS is not 32 bit)

SHELL    = /bin/sh
F77      = gfortran
LD       = gfortran
OPTFLAGS = -funroll-loops -ffast-math
XTCLIB   = -L . -lxdrf_gfortran
DEFINES  = -DXTC
FC       = $(F77)
RM       = rm 
FFLAGS   = $(OPTFLAGS) $(DEFINES) 

distobj = pvntime.f

interface: $(distobj)
	$(LD) $(FFLAGS) $(distobj) $(XTCLIB) -o pvntime
clean: 		
	$(RM) *.o 

